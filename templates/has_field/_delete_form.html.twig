<form method="post" action="{{ path('has_field_delete', {'id': has_field.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ has_field.id) }}">
    <button class="btn">Delete</button>
</form>
